(in-package #:ddr-tests)

(defparameter *map-color-kb*
  '(
    (color red)
    (color blue)
    (color green)
    (color yellow)
    (-> (all-different ?c1 ?c2 ?c3 ?c4)
        (all-different ?c1 ?c2 ?c3)
        (all-different ?c1 ?c2 ?c4)
        (all-different ?c1 ?c3 ?c4)
        (all-different ?c2 ?c3 ?c4))
    (-> (all-different ?c1 ?c2 ?c3)
        (different ?c1 ?c2)
        (different ?c1 ?c3)
        (different ?c2 ?c3))
    (-> (different ?x ?y)
        (different ?y ?x))

    (all-different red blue green yellow)

    (<- (colors-for map1 ?a ?b ?c ?d)
