        (different ?b ?c)
        (different ?a ?d)
        (different ?c ?d)
        (different ?a ?e)
        (different ?b ?e)
        (different ?c ?e)
        (different ?d ?e))

    (<- (colors-for map3 ?a ?b ?c ?d ?e ?f)
        (color ?a)
        (color ?b)
